#include <stdio.h>

int main()
{
    float x1;
    float x2;
    float k;
    int n = 1;
    int xn = 1;
    float counter = 0;
    
    printf("Enter the first two values for a geometric series:\n ");
    scanf("%f %f", &x1, &x2);
    
    k = x2/x1;
    
    if (k > -1 && k < 1) {
        printf("The geometric series is convergent.\n");
        while (n <= 100) {
        xn = xn*k;
        counter = counter + xn;
        n++; }
        printf("The sum of 100 terms is %.2f\n", counter);
    } else {
    printf("The series is divergent.\n");
    while (n <= 10) {
        printf("%d: %d\n", n, xn);
        xn = xn*k;
        n++;
}}
return 0;
}
